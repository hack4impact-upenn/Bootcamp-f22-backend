{
  "name": "boilerplate-s2022",
  "version": "1.0.0",
  "repository": "https://github.com/hack4impact-upenn/boilerplate-s2022.git",
  "license": "MIT",
  "workspaces": ["client", "server"],
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "setup": "yarn install && concurrently \"yarn --cwd client install\" \"yarn --cwd server install\"",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "server": "cd server && yarn start",
    "postinstall": "echo \"Package install attempted in global directory\"",
    "client": "cd client && yarn start"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.4.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "eslint": "^8.8.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "prettier": "^2.5.1"
  }
}
